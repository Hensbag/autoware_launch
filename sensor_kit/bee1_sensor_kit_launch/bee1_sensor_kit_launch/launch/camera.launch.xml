<launch>
  <arg name="launch_driver" default="false"/> <!-- Foxy'den geliyor -->
  
  <group>
    <push-ros-namespace namespace="camera"/>
    <group>
      <push-ros-namespace namespace="traffic_light"/>
      
      <!-- Sol Kamera -->
      <node pkg="topic_tools" exec="relay" name="tl_left_camera_relay">
        <param name="input_topic" value="/zed2/left/image_rect_color"/>
        <param name="output_topic" value="left/image_raw"/>
        <param name="type" value="sensor_msgs/msg/Image"/>
      </node>
      
      <!-- SaÄŸ Kamera -->
      <node pkg="topic_tools" exec="relay" name="tl_right_camera_relay">
        <param name="input_topic" value="/zed2/right/image_rect_color"/>
        <param name="output_topic" value="right/image_raw"/>
        <param name="type" value="sensor_msgs/msg/Image"/>
      </node>
    </group>
  </group>
</launch>
