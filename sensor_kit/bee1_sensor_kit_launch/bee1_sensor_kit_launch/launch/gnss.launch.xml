<launch>
  <arg name="launch_driver" default="false"/> <!-- Foxy'den geliyor -->
  
  <group>
    <push-ros-namespace namespace="gnss"/>
    
    <!-- Foxy'den GPS verisini Autoware'e aktar -->
    <node pkg="topic_tools" exec="relay" name="gps_relay">
      <param name="input_topic" value="/gnss"/>
      <param name="output_topic" value="/sensing/gnss/ublox/fix"/>
      <param name="type" value="sensor_msgs/msg/NavSatFix"/>
    </node>
    
    <!-- GPS → Pose dönüşümü -->
    <include file="$(find-pkg-share autoware_gnss_poser)/launch/gnss_poser.launch.xml">
      <arg name="input_topic_fix" value="/sensing/gnss/ublox/fix"/>
      <arg name="output_topic_gnss_pose" value="/sensing/gnss/pose"/>
    </include>
  </group>
</launch>
